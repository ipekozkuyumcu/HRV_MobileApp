<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:background="@drawable/profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:srcCompat="@drawable/ic_home" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/constraint" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="64dp"
            android:text="Email :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/title1" />

        <androidx.appcompat.widget.AppCompatEditText

            android:textColor="@color/text"
                android:id="@+id/fb_mail"
                android:layout_width="178dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="textEmailAddress"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_marginTop="50dp"
                android:hint="abcd@hotmail.com"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/title1"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/text"
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Password :"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_mail" />

            <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/text"
                android:id="@+id/fb_password"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:hint="********"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fb_mail"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:text="Name :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_password" />

        <androidx.appcompat.widget.AppCompatEditText
            android:textColor="@color/text"
                android:id="@+id/fb_name"
                android:layout_width="178dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:hint="Jane"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/fb_password"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="28dp"
            android:text="Surname :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/text"
                android:id="@+id/fb_surname"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"
                android:hint="Dunphy"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fb_name"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="Height :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_surname" />

        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/text"
                android:id="@+id/fb_height"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"
                android:hint="1.65 cm"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fb_surname"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Weight :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_height" />

        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/text"
                android:id="@+id/fb_weight"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"
                android:hint="52 kg"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fb_height"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:text="Age :"
            android:textColor="@color/text"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_weight" />

        <androidx.appcompat.widget.AppCompatEditText
                android:textColor="@color/text"
                android:id="@+id/fb_age"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"
                android:hint="24"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/fb_weight"/>


        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@id/fb_age">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@color/white"
                android:src="@drawable/ic_edit"
                android:text="EDIT "
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:src="@drawable/ic_save"
                android:text="SAVE"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/linear"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            android:gravity="center_horizontal">


            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/logout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="LOGOUT"
                android:textSize="15sp"
                android:src="@drawable/ic_logout"
                android:background="@color/white"
                />





        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>