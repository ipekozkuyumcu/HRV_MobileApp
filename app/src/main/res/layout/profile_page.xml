<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePage"
    android:background="@drawable/profile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/home_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:srcCompat="@drawable/ic_home"
            android:background="@color/white"
            />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90"/>




        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Profile"
            android:layout_marginTop="120dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Email :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.429"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/title1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_mail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="abcd@hotmail.com"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/title1">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_mail"
                android:layout_width="178dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="textEmailAddress"
                android:maxLength="20"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Password :"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="********"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_mail">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_password"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.429"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_password"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Jane"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout_password">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_name"
                android:layout_width="178dp"
                android:layout_height="37dp"
                android:background="@drawable/ic_e_mailframe"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Surname :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_surname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Dunphy"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_surname"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="text"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Height :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.433"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_surname" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1.65 cm"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_surname">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_height"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Weight :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_height" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_weight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="52 kg"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_height">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_weight"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Age :"
            android:textSize="15sp"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toBottomOf="@id/tv_weight"
            android:layout_marginBottom="140dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="24"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout_weight">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textInputEditText_age"
                android:layout_width="176dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:maxLength="20"
                android:singleLine="true"
                android:background="@drawable/ic_e_mailframe"/>

        </com.google.android.material.textfield.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@id/textInputLayout_age"
    app:layout_constraintStart_toStartOf="@+id/guideline"
    app:layout_constraintEnd_toEndOf="@id/guideline2"

    android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:src="@drawable/ic_edit"
            android:text="EDIT "
            android:textSize="15sp"
            android:layout_marginEnd="20dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="SAVE"
            android:textSize="15sp"
            android:src="@drawable/ic_save"
            android:background="@color/white"
            />





</LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>